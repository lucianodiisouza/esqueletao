  "author": "Luciano dii Souza / PrimoDev",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-native": ">=0.73.0",
    "expo": ">=50.0.0"
  },
  "dependencies": {
    "react-native-reanimated": "^4.0.0",
    "expo-linear-gradient": "^12.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-native": "^0.73.0",
    "typescript": "^5.0.0",
    "@babel/core": "^7.0.0",
    "@react-native-community/eslint-config": "^3.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "@testing-library/react-native": "^12.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "react": "^18.0.0",
    "react-native": "^0.73.0"
  },
  "files": [
    "lib",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lucianodiisouza/esqueletao.git"
  },
  "bugs": {
    "url": "https://github.com/lucianodiisouza/esqueletao/issues"
