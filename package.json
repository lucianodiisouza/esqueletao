  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "node scripts/build.js",
    "prepare": "npm run build",
    "example": "cd example && npm start",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "react-native",
    "skeleton",
